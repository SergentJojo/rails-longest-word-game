<div class="container d-flex justify-content-center">
  <div class= "content">
    <h1>Welcome to <strong class="game">Letters are never easy</strong></h1>
    <div class="word-list d-flex justify-content-between">
      <% @letters.each do |letter| %>
        <div class="letter btn btn-primary"><%= letter.upcase %></div>
      <% end %>
    </ul>
  </div>

  <form action="/score" method="post">
      <input type="text" class="form-control" placeholder="Type answer here!" name="word">
      <input type="submit" value="Submit your answer!">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
  </form>

</div>
